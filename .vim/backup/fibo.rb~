fibonacci = Enumerator.new do |fib|
    term = 1
    prev = 0

    loop do
        fib.yield term

        tmp = term
        term = prev + term
        prev = tmp 
    end
end 

15.times { puts fibonacci.next }

def fib(n)
    term = 1
    prev = 0

    loop do
        yield term
        tmp = term
        term = prev + term
        prev = tmp
    end
end
fib(15) { |i| puts i }
