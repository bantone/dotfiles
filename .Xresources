!urxvt config file

!some basic configs for background and appearance 
URxvt.depth: 32
URxvt.font: xft: Source Code Pro:size=11 

URxvt.foreground: #BBBBBB
URxvt.background: rgba:1111/1111/1111/dddd

!enable pseudo-transparency/opacity
!URxvt.background:[80]Black
URxvt.transparent: true
URxvt.shading: 35
URxvt.inheritPixmap: true

!URxvt.borderLess: true
URxvt.scrollBar: off
URxvt.mouseWheelScrollPage: on
Urxvt.perl-lib:    /usr/lib/urxvt/perl/

URxvt.saveLines: 5000
URxvt.loginShell: true
URxvt.cutchars: "\\ `\"\'()*;<>[]{|}&,=?@^\:"
Urxvt.secondaryScroll: true    
URxvt.termName: rxvt-unicode

!Clickable URLs
URxvt.perl-ext-common : default,font-size,fullscreen,clipboard,url-select,keyboard-select,matcher,vtwheel
URxvt.urlLauncher:      chromium
URxvt.url-select.underline: true
URxvt.matcher.button:   1
URxvt.keysym.M-Escape:perl:keyboard-select:activate
URxvt.keysym.M-c:     perl:clipboard:copy
URxvt.keysym.M-v:     perl:clipboard:paste
URxvt.keysym.M-C-v:   perl:clipboard:paste_escaped

!Fullscreen keymapping
URxvt.keysym.F11:           perl:fullscreen:switch
URxvt.keysym.M-u:           perl:url-select:select_next
URxvt.keysym.M-s:           perl:keyboard-select:search

!font size
URxvt.keysym.C-minus: perl:font-size:decrease
URxvt.keysym.C-equal: perl:font-size:increase

!Tabs
!URxvt.tabbed.tabbar-fg: 2
!URxvt.tabbed.tabbar-bg: 0
!URxvt.tabbed.tab-fg:    10
!URxvt.tabbed.tab-bg:    0

!Control + Arrow
URxvt.keysym.Control-Up: \033[1;5A
URxvt.keysym.Control-Down: \033[1;5B
URxvt.keysym.Control-Left: \033[1;5D
URxvt.keysym.Control-Right: \033[1;5C

! black
URxvt.color0  : #2E2E34343636
URxvt.color8  : #555557575353
! red
URxvt.color1  : #CCCC00000000
URxvt.color9  : #EFEF29292929
! green
URxvt.color2  : #4E4E9A9A0606
URxvt.color10 : #8A8AE2E23434
! yellow
URxvt.color3  : #C4C4A0A00000
URxvt.color11 : #FCFCE9E94F4F
! blue
URxvt.color4  : #34346565A4A4
URxvt.color12 : #72729F9FCFCF
! magenta
URxvt.color5  : #757550507B7B
URxvt.color13 : #ADAD7F7FA8A8
! cyan
URxvt.color6  : #060698209A9A
URxvt.color14 : #3434E2E2E2E2
! white
URxvt.color7  : #D3D3D7D7CFCF
URxvt.color15 : #EEEEEEEEECEC

URxvt.scrollTtyOutput: False
URxvt.scrollTtyKeypress: True
